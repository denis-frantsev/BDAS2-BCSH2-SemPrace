@model IEnumerable<BDAS2_SemPrace.Models.Obrazky>

@{
    ViewData["Title"] = "Index";
}
<div class="container-mt3" style="margin:2rem;">

    <h1>Seznam obrazků</h1>

    <table class="table">
        <thead>
            <tr>
                @*<th>
                    @Html.DisplayNameFor(model => model.Data)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Popis)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nazev)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pripona)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Popis)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nazev)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pripona)
                    </td>
                    <td>
                        <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@item.IdObrazek">Upravit</a> |
                        <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.IdObrazek">Podrobnosti</a> |
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.IdObrazek">Smazat</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>