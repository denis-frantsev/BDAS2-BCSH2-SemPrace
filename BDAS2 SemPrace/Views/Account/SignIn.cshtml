@model BDAS2_SemPrace.Models.User
@{
    ViewData["Title"] = "Sign In";
}

<body class="text-center">
    <div class="container" style="margin-top: 10rem;">
        <main class="form-signin w-100 m-auto" style="margin-top: 200px; max-width:350px; min-height:100%;">
            <form asp-action="SignIn">
                <h1 class="h3 mb-3 fw-normal">Přihlaste se, prosím</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating" style="margin:20px">
                    <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label asp-for="Email" for="floatingInput">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating" style="margin:20px">
                    <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                    <label asp-for="Password" for="floatingPassword">Heslo</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <p>Nemáte účet? <a asp-action="Register">Vytvořte si ho</a></p>
                <button class="btn btn-lg btn-primary" type="submit" style="margin:20 width:200px">Přihlásit se</button>
            </form>
        </main>
    </div>
</body>
