@using System.Web.Mvc.Html;
@{
    Layout = "_Layout";
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<link rel="stylesheet" href="~/css/HomePage.css asp-append-version="true" />
<html>
<article id="carousel">
    <div>
        <div class="bd-example-snippet bd-code-snippet">
            <div class="bd-example">
                <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2" class=""></button>
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3" class="active" aria-current="true"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="bd-placeholder-img bd-placeholder-img-lg d-block w-100" width="800px" height="550px" src="https://gluten.org/wp-content/uploads/2022/09/general-safety-gluten-free.png" role="img" aria-label="Placeholder: First slide" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#777"></rect><text x="50%" y="50%" fill="#555" dy=".3em"></text></img>

                            <div class="carousel-caption d-none d-md-block">
                                <h5>Vždy to nejčerstvější</h5>
                                <p>V našich obchodech LIDL vždy najdete jen nejčerstvější potraviny.</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="bd-placeholder-img bd-placeholder-img-lg d-block w-100" width="800" height="550" src="https://img.freepik.com/free-photo/groceries-packages-delivery-covid19-quarantine-shopping-concept-smiling-handsome-bearded-courier-red-uniform-bring-food-package-grocery-order-client-box-look-amused_1258-108059.jpg?w=2000" role="img" aria-label="Placeholder: Second slide" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#666"></rect><text x="50%" y="50%" fill="#444" dy=".3em"></text></img>

                            <div class="carousel-caption d-none d-md-block">
                                <h5>LIDL u vašich dveří</h5>
                                <p>BRZY si budete moci objednat a za pár minut náš kurýr je u vašich dveří</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="bd-placeholder-img bd-placeholder-img-lg d-block w-100" width="800" height="550" src="https://d1muel3dr7lyq3.cloudfront.net/base/article-billboard-image/EarthFarebillboard_082117.jpg?LqM7J0QWeRhF9XDbjbZowzEZ5anRsNfU" role="img" aria-label="Placeholder: Third slide" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#555"></rect><text x="50%" y="50%" fill="#333" dy=".3em"></text></img>

                            <div class="carousel-caption d-none d-md-block">
                                <h5>Velký výběr potravin</h5>
                                <p>U nás si chutné potraviny vybere káždý!</p>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</article>

@if (ModelContext.HasAdminRights())
{

    <div class="container mt-3 d-grid gap-2 col-6 mx-auto">
        <h1 class="text-center">Funkce</h1>
        <a class="btn btn-outline-primary" aria-current="page" href="~/Home/Platby">Zobrazit seznam plateb, provedených v určité době</a>
        <form asp-action="FavProductsPriceRise" class="input-group mb-3">
            <div class="input-group-prepend">
                <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Zvýšit ceny nejpopularnějších produktu</button>
            </div>
            <div class="input-group-prepend">
                <span class="input-group-text">Počet</span>
            </div>
            <input type="number" value="5" name="rise" class="form-control" style="margin:auto;" aria-describedby="basic-addon1" required min="0" max="20" />
            <input type="number" value="5" name="amountOfProducts" class="form-control" style="margin:auto;" aria-describedby="basic-addon1" required min="0" max="15" />
            <div class="input-group-append">
                <span class="input-group-text">%</span>
            </div>

            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Spustit</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Chcete spustit proceduru?
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-outline-danger" data-bs-dismiss="modal">Ne</button>
                            <button type="submit" class="btn btn-outline-primary">Ano</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    @Html.Partial("Data")
}
</html>
