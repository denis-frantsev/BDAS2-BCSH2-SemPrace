                <a asp-action="Edit" asp-route-id="@item.IdPlatba">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPlatba">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPlatba">Delete</a>
