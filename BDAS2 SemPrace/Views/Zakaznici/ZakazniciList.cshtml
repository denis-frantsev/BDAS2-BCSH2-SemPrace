@model IEnumerable<BDAS2_SemPrace.Models.Zakaznici>

@{
    ViewData["Title"] = "Seznam zákazniků";
}

<h1>Seznam Zákazniků</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Jmeno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prijmeni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelefonniCislo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Jmeno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prijmeni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelefonniCislo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdZakaznik">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdZakaznik">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdZakaznik">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
