@model IEnumerable<BDAS2_SemPrace.Models.TopZakazniciViewModel>

@{
    ViewData["Title"] = "Seznam top zákazniků";
}
<div class="container-mt3" style="margin:2rem;">

    <h1>Seznam zázakzníků, kteří utratili nejvíce</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Utratili)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Utratili)
                        Kč
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>