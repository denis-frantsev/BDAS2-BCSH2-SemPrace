@model IEnumerable<BDAS2_SemPrace.Models.Zakaznici>

@{
    ViewData["Title"] = "Index";
}

<div class="container-mt3" style="margin:2rem;">

    <h1>Seznam zákazníků</h1>

@*    <div class="input-group">
        <div class="form-outline">
        <input id="search-focus" type="search" id="form1" class="form-control" />
        <label class="form-label" for="form1">Search</label>
        </div>
        <button type="button" class="btn btn-primary">
        <i class="fas fa-search"></i>
        </button>
    </div>*@

    <div class="container-fluid d-inline-flex p-2" style="justify-content:space-between">
        <p>
            <a class="btn btn-primary" asp-action="Create">Přidat Zákazníka</a>
        </p>

        <form asp-controller="Zakaznici" asp-action="Index" method="get" class="d-inline-flex p-2">
                <input class="form-control mr-sm-2" type="text" name="SearchString" placeholder="Zadej jméno" aria-label="Search" style="margin-right:0.5rem;">
                <button class="btn btn-outline-success my-2 my-sm-0" value="Filter" type="submit">Hledat</button>
        </form>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Jmeno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prijmeni)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TelefonniCislo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>
                        @Html.DisplayFor(modelItem => item.Jmeno)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.Prijmeni)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.TelefonniCislo)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>

                        <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@item.IdZakaznik">Upravit</a> |
                        <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.IdZakaznik">Podrobnosti</a> |
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.IdZakaznik">Smazat</a> 
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>
