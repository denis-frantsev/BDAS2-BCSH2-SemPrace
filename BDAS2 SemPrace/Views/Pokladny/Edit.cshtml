@model BDAS2_SemPrace.Models.Pokladny

@{
    ViewData["Title"] = "Edit";
}
<div class="container-mt3" style="margin:2rem;">

    <h1>Edit</h1>

    <h4>Pokladny</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdSupermarket" class="control-label"></label>
                    <select asp-for="IdSupermarket" class="form-control" asp-items="ViewBag.IdSupermarket"></select>
                    <span asp-validation-for="IdSupermarket" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CisloPokladny" class="control-label"></label>
                    <input asp-for="CisloPokladny" class="form-control" />
                    <span asp-validation-for="CisloPokladny" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
</div>