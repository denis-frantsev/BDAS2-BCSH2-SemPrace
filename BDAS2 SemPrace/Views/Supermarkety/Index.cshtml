@model IEnumerable<BDAS2_SemPrace.Models.Supermarkety>

@{
    ViewData["Title"] = "Index";
}
<div class="container-mt3" style="margin:2rem;">

    <h1>Seznam poboček</h1>

    <p>
    <a class="btn btn-primary" asp-action="Create">Přidat pobočku</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nazev)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdAdresaNavigation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nazev)
                </td>
                <td>
                    @{var adresa = item.IdAdresaNavigation.ToString();}
                    @Html.DisplayFor(modelItem => adresa)            
                </td>
                <td>
                    <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@item.IdSupermarket">Upravit</a> |
                    <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.IdSupermarket">Podrobnosti</a> |
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.IdSupermarket">Smazat</a> 
                </td>
            </tr>
    }
        </tbody>
    </table>

</div>